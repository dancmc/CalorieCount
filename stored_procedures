CREATE DEFINER=`root`@`localhost` PROCEDURE `add_new_oauth`(IN firstname TEXT, IN lastname TEXT, IN providerid TEXT, IN provideruserid TEXT,IN email TEXT, IN access_token TEXT,IN secret TEXT)
BEGIN
	INSERT INTO users(email, first_name, last_name) VALUES (email, firstname, lastname);
    SELECT LAST_INSERT_ID() as t;
    INSERT INTO social_logins(user_id,provider_id, provider_user_id, email, access_token, secret)
    VALUES (LAST_INSERT_ID(), providerid, provideruserid, email, access_token, secret);
END



CREATE DEFINER=`root`@`localhost` PROCEDURE `add_client_message_calorie`(IN userid INTEGER, IN platform_id INTEGER, IN platform_username TEXT, IN messagetext TEXT, IN image_type SMALLINT, IN file_location TEXT, IN image_height SMALLINT, IN image_width SMALLINT, IN image_size INT, IN time_entered BIGINT)
BEGIN
	IF image_type IS NOT NULL THEN
		INSERT INTO file_index(file_location) VALUES (file_location);
        SET @fileindex = LAST_INSERT_ID();
		INSERT INTO images(image_id,uploader_id, image_type, file_location, image_height, image_width, image_size)
		VALUES (@fileindex, userid, image_type, file_location, image_height, image_width, image_size);
        INSERT INTO file_permissions(file_id, user_id)
        VALUES (@fileindex, userid);
	END IF;

    INSERT INTO messaging_platforms(username, platform_id, `timestamp`, image_id, `text`)
    VALUES (platform_username, platform_id, time_entered, @fileindex, messagetext);
    INSERT INTO calorie_entries(user_id, `timestamp`, image_id, client_comment)
    VALUES (userid, time_entered, @fileindex, messagetext);
    SELECT LAST_INSERT_ID() as t;

END